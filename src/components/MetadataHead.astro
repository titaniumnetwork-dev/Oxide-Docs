---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

/**
 * The Frontmatter configuration for metadata tag generation.
 * @see https://ogp.me/
 */
interface MetadataFrontmatter {
  /**
   * `og:title` from Opengraph.
   * @see https://ogp.me/#metadata
   */
  title: string;
  /**
   * `og:description` from Opengraph.
   * @see https://ogp.me/#metadata
   */
  description?: string;
  /**
   * `og:image` from Opengraph.
   * @see https://ogp.me/#metadata
   */
  image?: string;
  /**
   * Keywords array for SEO meta tags.
   */
  keywords?: string[];
  /**
   * Theme color for browser UI theming.
   */
  themeColor?: string;
}

/** The URL slug extracted from the current page pathname. */
const SLUG = Astro.url.pathname.replace(/^\/+|\/+$/g, "");
/** All of the main docs. */
const DOCS = await getCollection("docs");
/** Document entry matching the current slug if found. */
const MATCHING_DOC: CollectionEntry<"docs"> | undefined = DOCS.find(
  (doc: CollectionEntry<"docs">) => doc.slug === SLUG
);

/** Frontmatter data from the matching document entry. */
const frontmatter = MATCHING_DOC?.data;
/** Destructured title and description from frontmatter. */
const { title, description } = frontmatter || {};

/** Default metadata values used as fallbacks. */
const DEFAULT_METADATA = {
  title: "Titanium Network SDK Documentation",
  siteName: "Titanium Network Docs",
  twitterHandle: "@TitaniumNetDev",
  defaultImage:
    "https://raw.githubusercontent.com/titaniumnetwork-dev/Oxide/master/public/logo.png",
  defaultDescription:
    "Open Source Proxy Organization; Here we provide advanced web proxy services through the progression of web proxy technologies.",
  themeColor: "#434c5e",
} as const;

/** Whether the current page is a Scramjet Typedoc API page. */
const isScramjetTypedoc = SLUG.startsWith("api/");
/** Whether the current page is the main Scramjet proxy page. */
const isScramjetPage = SLUG === "proxies/scramjet";
/** Metadata configuration for Scramjet Typedoc pages. */
const scramjetMetadata = {
  title: "Scramjet Typedoc",
  description: "A mirror of https://scramjet.mercurywork.shop/typedoc",
  image:
    "https://raw.githubusercontent.com/MercuryWorkshop/scramjet/refs/heads/main/assets/scramjet.png",
  themeColor: "#ffa660",
  keywords: ["web proxy", "sw proxy", "interception proxy", "typedoc"],
  github: "https://github.com/MercuryWorkshop/scramjet",
  officialLink: "https://scramjet.mercurywork.shop/typedoc",
};

/** Frontmatter cast to the expected metadata interface. */
const FRONTMATTER = frontmatter as MetadataFrontmatter | undefined;
/** The image URL to use for metadata tags. */
const IMAGE = isScramjetTypedoc
  ? scramjetMetadata.image
  : FRONTMATTER?.image || DEFAULT_METADATA.defaultImage;
/** Keywords array for SEO meta tags. */
const KEYWORDS = isScramjetTypedoc
  ? scramjetMetadata.keywords
  : FRONTMATTER?.keywords || [];
/** Theme color for browser UI theming and social embeds. */
const THEME_COLOR =
  isScramjetTypedoc || isScramjetPage
    ? FRONTMATTER?.themeColor || scramjetMetadata.themeColor
    : FRONTMATTER?.themeColor || DEFAULT_METADATA.themeColor;

/** The final title to display in metadata tags. */
const finalTitle = isScramjetTypedoc
  ? scramjetMetadata.title
  : title || "Titanium Network SDK Documentation";
/** FIXME: This is a bandaid fix for the page title on index. Figure out a better way to do this later. */

/** The final description to display in metadata tags. */
const finalDescription = isScramjetTypedoc
  ? scramjetMetadata.description
  : description;
---

<!-- Other/Official Web Standards -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>{finalTitle}</title>
<meta
  name="viewport"
  content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
/>
<link rel="manifest" href="https://titaniumnetwork.org/manifest.json" />
<link rel="icon" type="image/png" href="https://titaniumnetwork.org/logo.png" />
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="https://titaniumnetwork.org/logo.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="https://titaniumnetwork.org/logo.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="https://titaniumnetwork.org/logo.png"
/>
<link
  rel="mask-icon"
  href="https://titaniumnetwork.org/logo.png"
  color="#b4213b"
/>
<meta name="msapplication-TileColor" content="#b4213b" />
<meta
  name="theme-color"
  media="(prefers-color-scheme: dark)"
  content={THEME_COLOR}
/>
{finalDescription && <meta name="description" content={finalDescription} />}
{KEYWORDS.length > 0 && <meta name="keywords" content={KEYWORDS.join(", ")} />}

<!-- OpenGraph metadata -->
<meta property="og:title" content={finalTitle} />
{
  finalDescription && (
    <meta property="og:description" content={finalDescription} />
  )
}
<meta property="og:image" content={IMAGE} />
<meta property="og:site_name" content={DEFAULT_METADATA.siteName} />
<meta property="og:type" content="website" />
<meta property="og:image:secure_url" content={IMAGE} />

<!-- Twitter Card metadata -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={DEFAULT_METADATA.twitterHandle} />
<meta name="twitter:creator" content={DEFAULT_METADATA.twitterHandle} />
<meta name="twitter:title" content={finalTitle || DEFAULT_METADATA.siteName} />
<meta
  name="twitter:description"
  content={finalDescription || DEFAULT_METADATA.defaultDescription}
/>
<meta name="twitter:image" content={IMAGE} />
